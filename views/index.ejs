<meta charset="utf-8">
<link href="style.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<h1> ToDo List </h1>

<h3>Tasks Left: <%= tasksLeft %></h3>

<form action="/addTask" method="POST">
  <input placeholder="task" id="input_task" name=task>
  <button> Add Task </button>
</form>

<ul>
  <% for(i = 0; i < tasks.length ; i++) { %>
    <li _id="<%= tasks[i]._id %>"  isDone="<%=tasks[i].isDone%>">  
            
            <% if(tasks[i].isDone == false) {%>
              <span><%= tasks[i].task %></span>
            <%} else {%>
              <span class="completed"><%= tasks[i].task %></span>
            <%} %>  
            
            <i class="fa fa-trash" ></i >
            <i class="fa fa-check"></i>
            <b class="fa fa-edit"></b>
    </li>
    
  <% } %>
    
</ul>


<script src="main.js"> </script>
